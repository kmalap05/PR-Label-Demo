  "issue": {
    "feature": {
      "requires": 1,
      "conditions": [
        {
          "type": "titleMatches",
          "pattern": ".*\\[FEATURE\\].*"
        }
      ]
    },
    "bug": {
      "requires": 1,
      "conditions": [
        {
          "type": "titleMatches",
          "pattern": ".*\\[BUG\\].*"
        }
      ]
    },
    "javascript": {
      "requires": 1,
      "conditions": [
        {
          "type": "descriptionMatches",
          "pattern": ".*js.*"
        }
      ]
    },
    "css": {
      "requires": 1,
      "conditions": [
        {
          "type": "descriptionMatches",
          "pattern": ".*css.*"
        }
      ]
    },
    "yml": {
      "requires": 1,
      "conditions": [
        {
          "type": "descriptionMatches",
          "pattern": ".*yml.*"
        }
      ]
    }
  },
  "pr": {
    "feature": {
      "requires": 1,
      "conditions": [
        {
          "type": "descriptionMatches",
          "pattern": ".*\\[x\\] Feature.*"
        }
      ]
    },
    "bug-fix": {
      "requires": 1,
      "conditions": [
        {
          "type": "descriptionMatches",
          "pattern": ".*\\[x\\] Bug.*"
        }
      ]
    },
    "documentation": {
      "requires": 1,
      "conditions": [
        {
          "type": "descriptionMatches",
          "pattern": ".*\\[x\\] Documentation.*"
        }
      ]
    },
    "other": {
      "requires": 1,
      "conditions": [
        {
          "type": "descriptionMatches",
          "pattern": ".*\\[x\\] Other.*"
        }
      ]
    },
    "javascript": {
      "requires": 1,
      "conditions": [
        {
          "type": "filesMatch",
          "glob": "**/*.js"
        }
      ]
    },
    "css": {
      "requires": 1,
      "conditions": [
        {
          "type": "filesMatch",
          "glob": "**/*.css"
        }
      ]
    },
    "yml": {
      "requires": 1,
      "conditions": [
        {
          "type": "filesMatch",
          "glob": "**/*.yml"
        }
      ]
    }
  }
}
