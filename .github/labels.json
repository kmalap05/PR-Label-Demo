    },
    "javascript": {
      "name": "JavaScript üñ•Ô∏è",
      "colour": "00ff00",
      "description": "Incorporates changes related to JavaScript code."
    },
    "css": {
      "name": "CSS üé®",
      "colour": "00ff00",
      "description": "Involves modifications to Cascading Style Sheets (CSS)."
