    },
    "bug-fix": {
      "name": "Bugfix üîß",
      "colour": "ff0000",
      "description": "Addresses and resolves an existing bug or issue."
    },
    "documentation": {
      "name": "Documentation üìù",
      "colour": "ff0000",
